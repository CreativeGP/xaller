###   A library to use advanced operations for string.


@ (strat (str)string (i)int) {
    return (substr str i 1)
}

# isnum ( str )
# 文字列が数字かどうか判別する関数
# str -- 判別する文字列
@ (isnum (str)string) {
    (i)int
    (numbers)string
    numbers = '0123456789'
    loop {
        (j)int
        loop {
            cond (eq (strat str i) (strat numbers j)) ? {
                escape
            }
            branch true ? {
                (eq j 9) ? {
                    return false
                }
            }
            j = (+ j 1)
        }
        i = (+ i 1)
        (eq i (strlen str)) ? {
            escape
        }
    }
    return true
}
